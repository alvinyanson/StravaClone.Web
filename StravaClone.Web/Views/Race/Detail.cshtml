@model Race

<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">@Model.Title</h1>
            <p class="lead text-muted">@Model.Description</p>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <img class="img-fluid" src="@Model.Image" alt="">
            </div>

            <div class="col-md-4">
                <h3 class="my-3">Details</h3>
                <ul>
                    <li>@Model.Address.City</li>
                    <li>@Model.Address.State</li>
                    <li>@Model.StartTime</li>
                    <li>@Model.EntryFee</li>
                    <li>@Model.Website</li>
                    <li>@Model.Twitter</li>
                    <li>@Model.Facebook</li>
                    <li>@Model.Contact</li>
                    <li>@Model.RaceCategory</li>
                </ul>
                <a asp-controller="Race" asp-action="Index">Back</a>
            </div>
        </div>
    </div>
</section>
