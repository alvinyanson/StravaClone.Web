@model IEnumerable<Club>


<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var club in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img src="@club.Image" class="card-img-top" alt="@club.Title">

                        <div class="card-body">
                            <h5 class="card-title">@club.Title</h5>
                            <p class="card-text">
                                @club.Description
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Club" asp-action="Detail" asp-route-id="@club.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a asp-controller="Club" asp-action="Edit" asp-route-id="@club.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-controller="Club" asp-action="Delete" asp-route-id="@club.Id" class="btn btn-sm btn-danger">Delete</a>
                                    }
                                </div>
                                <small class="text-muted">@club.ClubCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



